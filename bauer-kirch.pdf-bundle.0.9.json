{
    "manifests": {
        "bauer-kirch/pdf-bundle": {
            "manifest": {
                "bundles": {
                    "BK\\EAP\\PdfBundle\\PdfBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "env": {
                    "#1": "Choose one of the generator engines below",
                    "PDF_GENERATOR_DSN": "gotenberg://gotenberg:3000/",
                    "#2": "PDF_GENERATOR_DSN=browserless://browserless:3000/",
                    "#3": "PDF_GENERATOR_DSN=wkhtmltopdf://default/usr/bin/wkhtmltopdf",
                    "#4": "PDF_GENERATOR_DSN=dompdf://default"
                },
                "docker-compose": {
                    "docker-compose.yml": {
                        "services": [
                            "gotenberg:",
                            "  image: gotenberg/gotenberg:7",
                            "  ports:",
                            "    - ${PORT_GOTENBERG:-3000}:3000",
                            "",
                            "#browserless:",
                            "#  image: browserless/chrome:latest",
                            "#  ports:",
                            "#    - ${PORT_BROWSERLESS:-3000}:3000"
                        ]
                    }
                },
                "post-install-output": [
                    "  * ADMON:EAP // PdfBundle is ready."
                ]
            },
            "files": {
                "config/packages/eap_pdf.yaml": {
                    "contents": [
                        "eap_pdf:",
                        "  pdf_generator_dsn: '%env(resolve:PDF_GENERATOR_DSN)%'",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "c958b184b0ee77210993c0c3bb6ead923cad4a22"
        }
    }
}
