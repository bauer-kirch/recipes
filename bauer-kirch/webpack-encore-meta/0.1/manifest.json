{
    "gitignore": [
        "/public/build",
        "/public/webpack-dev"
    ],
    "copy-from-recipe": {
        ".gitlab-ci/": ".gitlab-ci/",
        "config/": "%CONFIG_DIR%/",
        "docker/": "docker/"
    },
    "docker-compose": {
        "docker-compose.yml": {
            "services": [
                "webpack:",
                "  image: 'gitlab.lan.bauer-kirch.de:5001/eap/php/docker-aux/webpack:latest'",
                "  volumes:",
                "    - ./:/var/www/app/:cached",
                "    - npm-cache:/root/.npm:cached"
            ],
            "volumes": ["npm-cache:"]
        }
    }
}