                        "    - time npm run eslint",
                        "",
                        "unit_tests_js:",
                        "  stage: test",
                        "  tags:",
                        "    - docker",
                        "  image: $NODE_IMAGE",
                        "  extends: .dependencies_cache",
                        "  cache:",
