{
    "bundles": {
        "Doctrine\\Bundle\\DoctrineBundle\\DoctrineBundle": ["all"]
    },
    "copy-from-recipe": {
        "config/": "%CONFIG_DIR%/",
        "src/": "%SRC_DIR%/"
    },
    "env": {
        "DATABASE_URL": "mysql://root:password@database:3306/app_%kernel.environment%?serverVersion=mariadb-10.8.0&charset=utf8"
    },
    "docker-compose": {
        "docker-compose.yml": {
            "services": [
                "database:",
                "  image: postgres",
                "  ports:",
                "    - \"5432:5432\"",
                "  environment:",
                "    POSTGRES_DB: ${POSTGRES_DATABASE:-app_dev}",
                "    POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-password}",
                "    POSTGRES_USER: ${POSTGRES_USER:-user}",
                "    PGDATA: /var/lib/postgresql/data",
                "  volumes:",
                "    - db-data:/var/lib/postgresql/data:rw",
                "",
                "adminer:",
                "  image: adminer:latest",
                "  ports:",
                "    - ${ADMINER_PORT:-8080}:8080",
                "  environment:",
                "    ADMINER_DEFAULT_SERVER: database",
                ""
            ],
            "volumes": ["db-data:"]
        }
    },
    "conflict": {
        "symfony/framework-bundle": "<5.3"
    }
}
